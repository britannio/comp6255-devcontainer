{
	"image": "ghcr.io/britannio/comp6255-devcontainer:23-24",
	"customizations": {
		"vscode": {
			"extensions": [
				// Coq Legacy extension for Coq 8.17.x
				"coq-community.vscoq1",
				// Fstar extension for F*
				"fstarlang.fstar-vscode-assistant",
				// Koka
				"koka.language-koka",
				// Rust
				"rust-lang.rust-analyzer",
				// Haskell,
				"haskell.haskell",
				// Haskell syntax highlighting
				"justusadam.language-haskell"

			],
			"settings": {
				"files.exclude": {
					"**/*.aux": true,
					"**/*.glob": true,
					"**/*.vo": true,
					"**/*.vos": true,
					"**/*.vok": true,
					"**/.*.cache": true
				},
				"coq.loadCoqProject": true,
				"coq.coqProjectRoot": ".",
				"[coq]": {
					"editor.tabSize": 2,
					"editor.insertSpaces": true
				}
			}
		}
	}
}